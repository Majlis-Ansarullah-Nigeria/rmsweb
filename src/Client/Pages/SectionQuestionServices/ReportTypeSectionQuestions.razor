@page "/reportquestions/{ReportTypeId}"
@attribute [MustHavePermission(FSHAction.View, FSHResource.Questions)]

@inject IStringLocalizer<ReportTypeSectionQuestions> L

<FshTitle Title="@L["Questions"]" Description="@L["Manage Report QUestions"]" />

<EntityTable TEntity="QuestionDto" TId="Guid" TRequest="ReportQuestionRequest" Context="@Context" >
    <ExtraActions>

        <MudMenuItem OnClick="(() => ViewProfile(context.Id))">@L["View Profile"]</MudMenuItem>

    </ExtraActions>

    <EditFormContent>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.Text)" @bind-Value="context.Text" Label="@L["Text"]" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.Points)" @bind-Value="context.Points" Label="@L["Points"]" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField For="@(() => context.ResponseType)" @bind-Value="context.ResponseType" Label="@L["Last Name"]" />
        </MudItem>
    </EditFormContent>

</EntityTable>