@page "/reportTypes/{Id}/sections"
@*@attribute [MustHavePermission(FSHAction.View, FSHResource.UserRoles)]*@

@inject IStringLocalizer<ReportTypes> L

<FshTitle Title="@L["Reports"]" Description="@L["Manage Report Types."]" />

<EntityTable @ref="_table" TEntity="ReportTypeSectionDto" TId="Guid" TRequest="ReportTypeSectionViewModel" Context="@Context">
    <ExtraActions>
        @*<MudMenuItem OnClick="(() => ManageReportSections(context.Id))">@L["Manage Report Type Sections"]</MudMenuItem>*@
    </ExtraActions>

    <EditFormContent>
        <MudItem xs="12" md="6">
            <MudTextField Label="@L["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudTextField Label="@L["Description"]" For="@(() => context.Description)"
                          @bind-Value="context.Description" />
        </MudItem>
        @*<MudItem xs="12" md="6">
            <MudTextField Label="@L["Report Tag"]" For="@(() => context.ReportTag)"
                          @bind-Value="context.ReportTag" />
        </MudItem>*@
    </EditFormContent>

</EntityTable>
