@page "/report-submission"
@using MudBlazor
@using System.Collections.Generic
@using System.Linq
@using rmsweb.Client.Pages.Report;

@inject IStringLocalizer<ReportSubmission> L

<FshTitle Title="@L["Reports"]" Description="@L["Manage Report Types."]" />

<!-- Add the ReportTypeEnum definition here -->

<EntityTable @ref="_table" TEntity="ReportSubmissionDto" TId="Guid" TRequest="ReportSubmissionViewModel" Context="@Context">

    <EditFormContent>
        <MudItem xs="12" md="6">
            <MudTextField Label="@L["Name"]" For="@(() => context.Name)" @bind-Value="context.Name" />
        </MudItem>
        <MudItem xs="12" md="6">
            <MudMenuItem OnClick="(() => MakeSubmission(context.Id))">@L["Manage Submission"]</MudMenuItem>
        </MudItem>
    </EditFormContent>

</EntityTable>